# Multi-Auth Infrastructure Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Environment configuration
environment = "{{ environment }}"
project_name = "{{ project_name }}"
region = "{{ region | default('us-east-1') }}"

# Database configuration
db_password = "{{ db_password }}"

# PostgreSQL settings
postgres_instance_class = "{{ postgres_instance_class | default('db.t3.micro') }}"
postgres_allocated_storage = {{ postgres_allocated_storage | default(20) }}

# MongoDB settings
mongodb_instance_class = "{{ mongodb_instance_class | default('db.t3.medium') }}"

# Kafka settings
kafka_instance_type = "{{ kafka_instance_type | default('kafka.t3.small') }}"
kafka_ebs_volume_size = {{ kafka_ebs_volume_size | default(20) }}

# Google Cloud settings
{% if gcp_project_id is defined and gcp_project_id != '' %}
gcp_project_id = "{{ gcp_project_id }}"
{% endif %}
gcp_region = "{{ gcp_region | default('us-central1') }}"

# Security settings
enable_monitoring = {{ enable_monitoring | default(true) | lower }}
backup_retention_days = {{ backup_retention_days | default(7) }}
enable_deletion_protection = {{ (environment == 'prod') | lower }}
